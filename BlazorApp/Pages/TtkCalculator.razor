@using CurvePoint = System.Tuple<int, double>

@page "/ttk-calculator"
<LoadoutsSelector Player1=@Player1 Player2=@Player2 @ref=@Selector />
<TtkGraph Curve1=Curve1 Curve2=Curve2 />

@code {
    public Player Player1 { get; set; } = new();
    public Player Player2 { get; set; } = new();
    public int Range => Selector?.Range ?? 0;
    private LoadoutsSelector Selector { get; set; }

    public IEnumerable<CurvePoint> Curve1 { get; set; }
    = new CurvePoint[] { Tuple.Create(0, 0.0), Tuple.Create(1, 0.375), Tuple.Create(2, 0.625) };
    public IEnumerable<CurvePoint> Curve2 { get; set; }
    = new CurvePoint[] { Tuple.Create(0, 0.0), Tuple.Create(1, 0.25), Tuple.Create(2, 0.75) };

}