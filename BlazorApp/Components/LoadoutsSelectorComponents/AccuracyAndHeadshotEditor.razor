@using MudBlazor

@if (Shooter != null)
{
    <MudItem xs="12">
        <MudSlider @bind-Value=@AccurracyPercent Min="0" Max="100" Step="1">
            <MudNumericField @bind-Value=@AccurracyPercent
                             Format="0"
                             Step="10"
                             Label="Accuracy"
                             Min="0"
                             Max="100"
                             AdornmentText="%"
                             Adornment="MudBlazor.Adornment.End" />
        </MudSlider>
    </MudItem>
    <MudItem xs="12">
        <MudSlider @bind-Value=@HsrPercent Min="0" Max="100" Step="1">
            <MudNumericField @bind-Value=@HsrPercent
                             Format="0"
                             Step="10"
                             Label="Headshot Ratio"
                             Min="0"
                             Max="100"
                             AdornmentText="%"
                             Adornment="MudBlazor.Adornment.End" />
        </MudSlider>
    </MudItem>
}

@code {
    [Parameter]
    public Shooter Shooter { get; set; }

    public double AccurracyPercent
    {
        get => Shooter.Acc * 100;
        set => Shooter.Acc = value / 100;
    }

    public double HsrPercent
    {
        get => Shooter.Hsr * 100;
        set => Shooter.Hsr = value / 100;
    }
}
