@if (Shooter != null)
{
	<MudItem xs="12">
		<NumericSlider @bind-Value=@AccurracyPercent
				   Step="10"
				   Min="0"
				   Max="100"
				   Unit="%"
				   Label="Accuracy">
			<Icon>
				<MudIcon Icon="@Icons.Material.Filled.Adjust" Size="@Size.Large"/>
			</Icon>
		</NumericSlider>
	</MudItem>
	<MudItem xs="12">
		<NumericSlider @bind-Value=@HsrPercent
				   Label="Headshot Ratio"
				   Step="10"
				   Min="0"
				   Max="100"
				   Unit="%">
			<Icon>
				<MudIcon Icon="@Icons.Filled.FaceRetouchingNatural" Size="@Size.Large"/>
			</Icon>
		</NumericSlider>
	</MudItem>
}

@code {
	[Parameter]
	public Shooter Shooter { get; set; }

	public double AccurracyPercent
	{
		get => Shooter.Accuracy * 100;
		set => Shooter.Accuracy = value / 100;
	}

	public double HsrPercent
	{
		get => Shooter.HeadshotRatio * 100;
		set => Shooter.HeadshotRatio = value / 100;
	}
}
